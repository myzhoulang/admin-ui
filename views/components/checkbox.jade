extends ../layout
block content

  .adm-container
    h2 Input 输入框
    p 通过鼠标和键盘输入字符

  .adm-container
    h3 基础用法
    .adm-row
      .adm-col-12
        label.adm-checkbox
          input(type="checkbox", name="a")
          span.adm-checkbox-inner
          | 上海

        label.adm-checkbox
          input(type="checkbox", name="a")
          span.adm-checkbox-inner
          | 北京
        label.adm-checkbox
          input(type="checkbox", name="a")
          span.adm-checkbox-inner
          | 杭州

      .adm-row
        .adm-col-12
          label.adm-radio
            input(type="radio", name="a")
            span.adm-radio-inner
            | 爬山

          label.adm-radio
            input(type="radio", name="a")
            span.adm-radio-inner
            | 看书

          label.adm-radio
            input(type="radio", name="a")
            span.adm-radio-inner
            | 打篮球

      h3 基础用法
      .adm-row
        .adm-col-12
          label.adm-checkbox
            input(type="checkbox",  disabled="disabled")
            span.adm-checkbox-inner
            | 上海

          label.adm-checkbox
            input(type="checkbox", checked="checked", disabled="disabled")
            span.adm-checkbox-inner
            | 北京
          label.adm-checkbox
            input(type="checkbox", name="a", disabled="disabled")
            span.adm-checkbox-inner
            | 杭州

        .adm-row
          .adm-col-12
            label.adm-radio
              input(type="radio", name="c", checked="checked", disabled="disabled")
              span.adm-radio-inner
              | 爬山

            label.adm-radio
              input(type="radio", name="c", disabled="disabled")
              span.adm-radio-inner
              | 看书

            label.adm-radio
              input(type="radio", name="c", disabled="disabled")
              span.adm-radio-inner
              | 打篮球
    h3 文本域
    .adm-row
      .adm-col-12
        .adm-textarea
          textarea.adm-textarea-inner(name="desp", placeholder="大段文本输入在这里")

    h3 复合型输入框
    .adm-row
      .adm-col-24.m-t-md
        .adm-input-group
          .adm-input-addon IP
          .adm-input
            input.adm-input-inner(name="user", type="text", placeholder="在这里输入用户名")

      .adm-col-24.m-t-md
        .adm-input-group
          .adm-input-addon http://
          .adm-input
            input.adm-input-inner(name="user", type="text", placeholder="在这里输入用户名")
          .adm-input-addon .com

      .adm-col-24.m-t-md
        .adm-input-group
          .adm-input
            input.adm-input-inner(name="user", type="text", placeholder="在这里输入用户名")
          .adm-input-addon
            i.fa.fa-search




    h3 各个尺寸的输入框
    .adm-row
      .adm-col-6
        .adm-input
          input.adm-input-inner.adm-input-inner-lg(placeholder=".adm-input-inner-lg")

      .adm-col-6
        .adm-input
          input.adm-input-inner(placeholder=".adm-input-inner")

      .adm-col-6
        .adm-input
          input.adm-input-inner.adm-input-inner-sm(placeholder=".adm-input-inner-sm")

      .adm-col-6
        .adm-input
          input.adm-input-inner.adm-input-inner-xs(placeholder=".adm-input-inner-xs")

    .adm-row
      .adm-col-6.m-t-md
        .adm-input-group
          .adm-input

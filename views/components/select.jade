extends ../layout
block content

    h2 Select 选择输入框
    p 当选项过多时，使用下拉菜单展示并选择内容。

    h3 模拟的select
    .adm-row
      .adm-col-12
        .adm-select
          .adm-input
            .adm-input-icon
              i.fa.fa-home.fa-lg
            input.adm-input-inner(name="age", type="text", placeholder="xxx")
            .adm-select-dropdown
              ul
                li.adm-menu-group-title 红烧类
                li.adm-menu-item(disabled="disabled") 红烧鱼
                li.adm-menu-item 红烧小龙虾

                li.adm-menu-group-title 清蒸类
                li.adm-menu-item 清蒸螃蟹
                li.adm-menu-item 清蒸鱼
      .adm-col-12
        .adm-select
          .adm-input
            input.adm-input-inner(name="user", type="text", placeholder="选择你想要吃的菜")
            .adm-input-icon.adm-input-icon-right
              i.fa.fa-caret-down.fa-lg.arrow
          .adm-select-dropdown
            ul
              li.adm-menu-group-title 红烧类
              li.adm-menu-item(disabled="disabled") 红烧鱼
              li.adm-menu-item 红烧小龙虾

              li.adm-menu-group-title 清蒸类
              li.adm-menu-item 清蒸螃蟹
              li.adm-menu-item 清蒸鱼

    h3 系统的select
    .adm-row
      .adm-col-12
        select.form-control(name="select")
          option(value="1", selected) 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4

      .adm-col-12
        select.form-control(name="select2", disabled)
          option(value="A") A
          option(value="B") B
          option(value="C", selected) C
          option(value="D") D
  script.
    var oInput = [...document.querySelectorAll('.adm-input-inner')];
    var oSelect = [...document.querySelectorAll('.adm-select')];
    var oBtn = document.querySelector('.adm-btn');

    oInput.forEach((item, index)=>{
      item.onfocus = () => oSelect[index].classList.add('open');

      item.onblur = () => oSelect[index].classList.remove('open');
    });
